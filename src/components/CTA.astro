---
const APP_URL = "https://expense-tracker-dashboard-omega.vercel.app/auth";
---

<section class="py-16 lg:py-24 relative overflow-hidden">
  <!-- Glow -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[400px] bg-emerald-500/8 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div
      class="reveal bg-gradient-to-b from-slate-900 to-slate-900/90 border border-slate-700/40 rounded-3xl p-8 sm:p-12 lg:p-14 shadow-2xl glow-card"
    >
      <!-- Icon -->
      <div
        class="inline-flex items-center justify-center w-16 h-16 bg-emerald-500/10 border border-emerald-500/20 rounded-2xl mb-8"
      >
        <svg
          width="32"
          height="32"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#10b981"
          stroke-width="1.8"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>

      <!-- Beta badge -->
      <div class="inline-flex items-center gap-2 bg-emerald-500/10 border border-emerald-500/25 rounded-full px-4 py-1.5 mb-6">
        <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
        <span class="text-emerald-400 text-sm font-semibold">Beta is live — join free today</span>
      </div>

      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-white mb-5 leading-tight"
      >
        Take control of your money.<br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-emerald-300"
        >
          Starting right now, for free.
        </span>
      </h2>

      <p class="text-slate-400 text-lg mb-4 max-w-xl mx-auto">
        Join Expense Tracker's beta and get every Pro feature free while we're in early access. No credit card. No catch. Cancel whenever you want.
      </p>

      <!-- Beta offer highlight -->
      <div class="inline-flex items-center gap-2 bg-slate-800/80 border border-slate-700 rounded-xl px-4 py-2.5 mb-8 text-sm">
        <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
        </svg>
        <span class="text-slate-300">Beta users get <strong class="text-white">Pro features free</strong> — locked in before pricing goes live</span>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={APP_URL}
          class="group bg-emerald-500 hover:bg-emerald-400 text-white font-semibold px-10 py-4 rounded-xl text-base transition-all shadow-xl shadow-emerald-500/30 hover:shadow-emerald-500/50 hover:-translate-y-0.5 inline-flex items-center justify-center gap-2"
        >
          Create Free Account
          <svg
            class="w-4 h-4 group-hover:translate-x-0.5 transition-transform"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
        <a
          href="#features"
          class="bg-slate-800/80 hover:bg-slate-800 text-slate-200 font-semibold px-8 py-4 rounded-xl text-base transition-all border border-slate-700 hover:border-slate-600 inline-flex items-center justify-center gap-2"
        >
          See All Features
        </a>
      </div>

      <p class="text-slate-600 text-sm mt-6">
        No credit card · Setup in under 2 minutes · Export your data anytime
      </p>
    </div>
  </div>
</section>
