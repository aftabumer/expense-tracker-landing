---
const stats = [
  {
    value: '$4.99',
    label: 'per month — vs $14.99 Monarch',
    sublabel: '60% cheaper than YNAB',
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg>`,
    color: 'text-emerald-400 bg-emerald-500/10 border-emerald-500/20',
    isStatic: true,
  },
  {
    count: 6, suffix: '',
    label: 'tools in one dashboard',
    sublabel: 'Expenses · Budget · Debt · Net Worth · Assets · Zakat',
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>`,
    color: 'text-blue-400 bg-blue-500/10 border-blue-500/20',
    isStatic: false,
  },
  {
    count: 100, suffix: '%',
    label: 'free core plan — forever',
    sublabel: 'No trial. No expiry. No card needed.',
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>`,
    color: 'text-purple-400 bg-purple-500/10 border-purple-500/20',
    isStatic: false,
  },
  {
    count: 150, suffix: '+',
    label: 'countries supported',
    sublabel: 'Works offline in all of them',
    icon: `<svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>`,
    color: 'text-orange-400 bg-orange-500/10 border-orange-500/20',
    isStatic: false,
  },
];
---

<section class="relative border-y border-slate-800/60 bg-slate-900/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((stat, i) => (
        <div class={`reveal reveal-delay-${i + 1} flex flex-col items-center text-center gap-3`}>
          <div class={`inline-flex items-center justify-center w-11 h-11 rounded-xl border ${stat.color}`}>
            <Fragment set:html={stat.icon} />
          </div>
          <div>
            {stat.isStatic ? (
              <div class="text-3xl font-extrabold text-white mb-1 tabular-nums">{stat.value}</div>
            ) : (
              <div
                class="text-3xl font-extrabold text-white mb-1 tabular-nums"
                data-count={stat.count}
                data-suffix={stat.suffix}
                data-decimals={0}
              >
                0{stat.suffix}
              </div>
            )}
            <div class="text-slate-300 text-sm font-medium leading-snug">{stat.label}</div>
            <div class="text-slate-600 text-xs mt-1 leading-snug">{stat.sublabel}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
