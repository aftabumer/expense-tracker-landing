<section id="testimonials" class="py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-10 reveal">
      <span class="inline-block text-emerald-400 text-sm font-semibold uppercase tracking-wider mb-4">User Stories</span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-white mb-5">
        Real results from real people.
      </h2>
      <p class="text-slate-400 text-lg max-w-xl mx-auto">
        Over 1,000 users across 150+ countries use Expense Tracker to take control of their financial lives.
      </p>
    </div>

    <!-- Cards — mobile horizontal scroll, tablet 2-col, desktop 3-col -->
    <div class="flex sm:grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5 overflow-x-auto sm:overflow-visible snap-x sm:snap-none snap-mandatory -mx-4 px-4 sm:mx-0 sm:px-0 pb-4 sm:pb-0 scrollbar-hide">
      {testimonials.map((t, i) => (
        <div
          class={`reveal reveal-delay-${(i % 3) + 1} snap-center flex-shrink-0 w-[82vw] sm:w-auto group bg-slate-900/60 hover:bg-slate-900 border border-slate-800 hover:border-slate-700 rounded-2xl p-5 sm:p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl hover:shadow-black/30 flex flex-col gap-4`}
        >
          <!-- Top row: tag + stars -->
          <div class="flex items-center justify-between">
            <span class={`text-[10px] font-bold uppercase tracking-wider px-2.5 py-1 rounded-full border ${t.tagColor}`}>
              {t.tag}
            </span>
            <div class="flex gap-0.5">
              {Array.from({ length: 5 }).map((_, idx) => (
                <svg
                  class={`w-3.5 h-3.5 ${idx < t.stars ? 'text-amber-400' : 'text-slate-700'}`}
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
              ))}
            </div>
          </div>

          <!-- Result highlight -->
          <div class={`text-sm font-bold ${t.result.color}`}>
            ↑ {t.result.label}
          </div>

          <!-- Quote -->
          <blockquote class="text-slate-300 text-sm leading-relaxed flex-1">
            "{t.quote}"
          </blockquote>

          <!-- Author row -->
          <div class="flex items-center gap-3 pt-4 border-t border-slate-800/80">
            <div class={`w-9 h-9 rounded-full bg-gradient-to-br ${t.avatarColor} flex items-center justify-center text-white font-bold text-xs flex-shrink-0 ring-2 ring-slate-700/60`}>
              {t.avatar}
            </div>
            <div class="min-w-0">
              <p class="text-white font-semibold text-sm leading-none mb-0.5">{t.name}</p>
              <p class="text-slate-500 text-xs truncate">{t.role}</p>
            </div>
            <div class="ml-auto flex-shrink-0" title="Verified user">
              <div class="w-5 h-5 bg-emerald-500/10 border border-emerald-500/20 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-emerald-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust note -->
    <p class="text-center text-slate-600 text-sm mt-6 reveal">
      All reviews are from verified Expense Tracker users. Results vary based on usage.
    </p>
  </div>
</section>
